<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.biblioteka.controller.ReviewFormController"
      spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="Ocijeni i recenziraj knjigu" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator/>

    <VBox spacing="5">
        <Label text="Knjiga:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        <Label fx:id="bookTitleLabel" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Ocjena (1-5 zvjezdica):" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ToggleButton fx:id="star1" text="★" onAction="#handleStarClick"
                          style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: #bdc3c7;"/>
            <ToggleButton fx:id="star2" text="★" onAction="#handleStarClick"
                          style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: #bdc3c7;"/>
            <ToggleButton fx:id="star3" text="★" onAction="#handleStarClick"
                          style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: #bdc3c7;"/>
            <ToggleButton fx:id="star4" text="★" onAction="#handleStarClick"
                          style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: #bdc3c7;"/>
            <ToggleButton fx:id="star5" text="★" onAction="#handleStarClick"
                          style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: #bdc3c7;"/>
            <Label fx:id="ratingLabel" text="Nema ocjene" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
        </HBox>
    </VBox>

    <VBox spacing="5">
        <Label text="Vaša recenzija:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        <TextArea fx:id="commentArea" promptText="Napišite vašu recenziju ovdje..."
                  wrapText="true" prefRowCount="5"
                  style="-fx-border-color: #bdc3c7; -fx-border-radius: 3;"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Odustani" onAction="#handleCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
        <Button text="Sačuvaj recenziju" onAction="#handleSave"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
    </HBox>
</VBox>
