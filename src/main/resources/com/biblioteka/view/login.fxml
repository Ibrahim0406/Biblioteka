<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.biblioteka.controller.LoginController"
            prefHeight="350" prefWidth="400" style="-fx-background-color: #ecf0f1;">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="BIBLIOTEKA" textFill="white">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            <Label text="Sistem za upravljanje knjigama" textFill="#bdc3c7">
                <font>
                    <Font size="12"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;">
            <Label text="Prijava na sistem" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

            <VBox spacing="5">
                <Label text="Korisničko ime:" style="-fx-font-size: 12;"/>
                <TextField fx:id="usernameField" promptText="Unesite korisničko ime"
                           style="-fx-pref-width: 300; -fx-pref-height: 35;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Lozinka:" style="-fx-font-size: 12;"/>
                <PasswordField fx:id="passwordField" promptText="Unesite lozinku"
                               style="-fx-pref-width: 300; -fx-pref-height: 35;"/>
            </VBox>

            <Label fx:id="messageLabel" style="-fx-font-size: 11;" wrapText="true"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Prijavi se" onAction="#handleLogin"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 35;"/>
                <Button text="Izlaz" onAction="#handleExit"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 35;"/>
            </HBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20 0 0 0;">
                <Label text="Demo pristup:" style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;"/>
                <Label text="Korisničko ime: admin (korisnik)" style="-fx-font-size: 10; -fx-text-fill: #95a5a6;"/>
                <Label text="Lozinka: admin123 (korisnik123)" style="-fx-font-size: 10; -fx-text-fill: #95a5a6;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>