<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.biblioteka.controller.UserMainController"
            prefHeight="700" prefWidth="1200" stylesheets="@styles.css">

    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
                <Label text="ðŸ“š BIBLIOTEKA" textFill="white">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" textFill="#ecf0f1" style="-fx-font-size: 12;"/>
                <Button text="Odjavi se" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 11;"/>
            </HBox>

            <ToolBar style="-fx-background-color: #34495e; -fx-padding: 10;">
                <Button text="ðŸ“– Pozajmi" onAction="#handleBorrowBook"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="ðŸ”„ OsvjeÅ¾i" onAction="#handleRefresh"
                        style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="ðŸ”" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                <TextField fx:id="searchField" promptText="PretraÅ¾i knjige..."
                           style="-fx-pref-width: 250;"/>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <!-- Added SplitPane to show both available books and borrowed books -->
        <SplitPane dividerPositions="0.6" orientation="HORIZONTAL">
            <!-- Available Books Section -->
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="ðŸ“š Dostupne knjige" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TableView fx:id="booksTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="titleColumn" text="Naslov" prefWidth="200" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="authorColumn" text="Autor" prefWidth="150" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="yearColumn" text="Godina" prefWidth="80" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="priceColumn" text="Cijena" prefWidth="100" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="quantityColumn" text="Dostupno" prefWidth="80" style="-fx-text-fill: #2c3e50;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- Borrowed Books Section -->
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ“– Moje pozajmljene knjige" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="â†©ï¸ Vrati knjigu" onAction="#handleReturnBook"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
                <TableView fx:id="loansTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="loanIdColumn" text="ID" prefWidth="50" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="loanBookTitleColumn" text="Naslov knjige" prefWidth="250" style="-fx-text-fill: #2c3e50;"/>
                        <TableColumn fx:id="loanDateColumn" text="Datum pozajmljivanja" prefWidth="150" style="-fx-text-fill: #2c3e50;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
